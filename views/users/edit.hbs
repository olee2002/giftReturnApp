<div class="stepper">
  <a href="/users">Home</a> /
  <a href="/users/{{user._id}}">Profile</a> / Edit Profile
</div>

<div class="card">

  <h2>Edit User Profile</h2>
  <div>
    <form action="/users/{{user._id}}?_method=PUT" method="POST">
      <div class="form-input">
        <label for="username">Username:</label>
        <input type="text" name="username" value="{{user.username}}" required/>
      </div>

      <div class="form-input">
        <label for="email">Email:</label>
        <input type="text" name="email" value="{{user.email}}" />
      </div>

      <div class="form-input">
        <label for="firstName">First Name:</label>
        <input type="text" name="firstName" value="{{user.firstName}}" required/>
      </div>

      <div class="form-input">
        <label for="lastName">Last Name:</label>
        <input type="text" name="lastName" value="{{user.lastName}}" required/>
      </div>

      <div class="form-input">
        <label for="photoUrl">Photo Url:</label>
        <input type="text" name="photoUrl" value="{{user.photoUrl}}" />
      </div>

      <div class="button-container flex-end">
        <input class="button primary" type="submit" value="Update Profile">
        <a href="/users/{{user._id}}" class="button warning">Cancel</a>
      </div>
    </form>
  </div>
</div>